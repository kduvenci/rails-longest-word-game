
<div class="container">
  <h1>. : Longest Word Game : .</h1>
  <div class="row">
      <div class="col-xs-1 col-md-1"></div>
      <% @letters.each do |letter| %>
      <div class="col-xs-1 col-md-1">
         <p class='box'><%= letter %></p>
      </div>
      <% end %>
  </div>
  <br><br><br>
  <form action="score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
    <div class="input-group mb-3">
      <input type="text" name="answer" class="form-control" placeholder="What is the longest word you can find ?" aria-label="Recipient's username" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit">Play!</button>
      </div>
    </div>
  </form>
</div>
